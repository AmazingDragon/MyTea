<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xtu.amazingdragon.mytea.AdvertiseActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/advertise_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <Button
        android:id="@+id/advertise_button"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="170dp"
        android:background="@mipmap/tiyan"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/container_dot"
        android:background="#3A5723"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
</RelativeLayout>
